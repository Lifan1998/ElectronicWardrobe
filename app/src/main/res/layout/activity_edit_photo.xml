<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".act.PhotoActivity">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_search_back" />


        <ImageView
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_light" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_cut" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_415">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_415" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/bg_bottom3_orange"
            android:gravity="center"
            android:text="Remove Background"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>