<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act.LoginActivity">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix" />


    <LinearLayout
        android:id="@+id/ll_wechart"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_104"
        android:background="@drawable/btn_login_wechart"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login_icon_wechart"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:text="Log In"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_facebook"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/btn_login_facebook"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login_icon_facebook"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:text="Log In"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>